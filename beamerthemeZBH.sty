\newboolean{@usegerman}
\setboolean{@usegerman}{false}

\DeclareOption{german}{
  \renewcommand{\headertext}{
    Zentrum f\"ur\\
    Bioinformatik\\
  }
  \renewcommand{\addresstext}{
